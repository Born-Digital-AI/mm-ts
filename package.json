{
  "name": "mm-ts",
  "version": "1.0.0",
  "description": "Personal TypeScript utils...",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marianmeres/mm-ts.git"
  },
  "keywords": [
    "TypeScript",
    "jQuery"
  ],
  "author": "Marian Meres",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marianmeres/mm-ts/issues"
  },
  "homepage": "https://github.com/marianmeres/mm-ts#readme",
  "dependencies": {
    "@types/jest": "^21.1.8",
    "@types/jquery": "^3.2.16",
    "@types/lodash-es": "^4.17.0",
    "jest": "^21.2.1",
    "lodash-es": "^4.17.5",
    "onchange": "^3.3.0",
    "ts-jest": "^22.0.2",
    "tslint": "^5.8.0",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "test": "NODE_ENV=testing jest --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json --force",
    "watch:tslint": "onchange 'src/**/*.*' --initial -- npm run tslint"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es/.*)"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js|jsx)",
      "**/?(*.)(spec|test).(ts|tsx|js|jsx)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "globals": {
      "__TESTING__": true,
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
