{
  "name": "mm-ts",
  "version": "1.0.0",
  "description": "Personal TypeScript utils...",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marianmeres/mm-ts.git"
  },
  "keywords": [
    "TypeScript",
    "jQuery"
  ],
  "author": "Marian Meres",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marianmeres/mm-ts/issues"
  },
  "homepage": "https://github.com/marianmeres/mm-ts#readme",
  "dependencies": {
    "@types/jest": "^23.3.1",
    "@types/jquery": "^3.3.6",
    "@types/lodash-es": "^4.17.1",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.9.4",
    "@types/sqlstring": "^2.2.0",
    "@types/websocket": "0.0.40",
    "@types/ws": "^6.0.0",
    "colors": "^1.3.2",
    "dotenv": "^6.0.0",
    "eventemitter3": "^3.1.0",
    "jest": "^23.5.0",
    "lodash": "^4.17.10",
    "lodash-es": "^4.17.10",
    "mysql": "^2.16.0",
    "onchange": "^4.1.0",
    "pg": "^7.4.3",
    "prettier": "^1.14.2",
    "sqlstring": "^2.3.1",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "ws": "^6.0.0"
  },
  "scripts": {
    "test": "NODE_ENV=testing jest --watch --runInBand",
    "tslint": "tslint -c tslint.json -p tsconfig.json --force",
    "watch:tslint": "onchange 'src/**/*.*' --initial -- npm run tslint",
    "prettier": "prettier --single-quote --trailing-comma es5 --tab-width 4 --arrow-parens always --write 'src/**/*.{js,jsx,ts,tsx,scss,json}'"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es/.*)"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js|jsx)",
      "**/?(*.)(spec|test).(ts|tsx|js|jsx)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "globals": {
      "__TESTING__": true,
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
